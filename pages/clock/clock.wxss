/* 输入框样式 */
.search_box{
  width: 100%; 
  background-color: rgb(93, 176, 190);
  padding-top: 10rpx;
  padding-bottom: 5rpx;
}
.search {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  width: 90%;
  height: 60rpx;
  margin: 5%;
 
  /* margin-bottom: 5%; */
  border: 1rpx solid whitesmoke;
  border-radius: 5rpx;
}

/* 输入框提示文字样式 */
.search input {
  font-size: 30rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  padding-left: 30rpx;
}



/*日程框*/
.wei_box{
  width: 95%;
  margin: 0 auto;
  border: 1px solid #2c9be6;
  height: 55rpx;
  display: flex;
  justify-content: space-between;
  margin:2%
}
.wei_box_quan{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
}
