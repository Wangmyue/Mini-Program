
.helper-text{
  /* 字体大小 */
  font-size: 15px;
  /* 字体颜色 */
  color:black;
  /*字体风格-粗细*/
  font-weight: bold;
  /*段落排版--首字缩进*/
  text-indent: 2em;
  /*段落排版--行间距（行高）*/
  line-height: 1.5em;
  /*段落排版--中文字间距*/
  letter-spacing: 1.5px;
  /*字母间距*/
  word-spacing: 2px;
  /*文字对齐 right 、left 、center  */
  text-align: left;

  margin: 40rpx;
}
.helper-title{
  /* 字体大小 */
  font-size: 20px;
  /* 字体颜色 */
  color:rgb(29, 49, 85);
  /*字体风格-粗细*/
  font-weight:bold;
  /*段落排版--行间距（行高）*/
  line-height: 1em;
  /*段落排版--中文字间距*/
  letter-spacing: 1px;
  /*字母间距*/
  word-spacing: 4px;
  /*文字对齐 right 、left 、center  */
  text-align: center;
  margin: 50rpx;
}
