  /*字体风格-粗细*/
  font-weight: bold;
  /*段落排版--行间距（行高）*/
  line-height: 2em;
  /*段落排版--中文字间距*/
  letter-spacing: 1px;
  /*字母间距*/
  word-spacing: 4px;
  /*文字对齐 right 、left 、center  */
  text-align: left;
  margin: 5rpx;

}

